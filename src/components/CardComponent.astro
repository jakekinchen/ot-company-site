---
// CardComponent.astro
const { title = "Default Title", subtitle = "Default Subtitle", route = "/", glassmorphism = false } = Astro.props;
---

<div class={`card ${glassmorphism ? 'backdrop-filter backdrop-blur-lg' : ''} p-5 rounded-xl text-white w-64 h-48 block mb:hidden`}>
    <h2 class="text-xl font-bold mb-2 text-white">{title}</h2>
    <p class="text-md mb-4">{subtitle}</p>
    <a href={route} class="learn-more-btn inline-block text-bold border-white border-2 rounded-full px-4 py-2 text-white">Learn More</a>
</div>
<style>
    :root {
        --filter-half-blue: rgba(16, 121, 208, .3);; /* Semi-transparent blue */
    }
    
    .card {
        background-color: var(--filter-half-blue);
        backdrop-filter: ${glassmorphism ? 'blur(10px)' : 'none'};
    }
    
    .learn-more-btn:hover {
        background-color: var(--blue);
        color: white;
    }
    </style>