---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

// Define Props type based on the collection schema
type Props = CollectionEntry<'posts'>['data'];

function isPostData(data: any): data is Props {
  return data && typeof data === 'object' && 'title' in data && 'share' in data;
}

const props = Astro.props;

if (!isPostData(props)) {
  throw new Error('Props do not match the expected type');
}

const { title, date, category, tags, share } = props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={share.description} />
        <style>
            /* Your styles here */
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="hero-image">
                    {share.image && <img width={1020} height={510} src={share.image} alt="" />}
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={date} />
                        </div>
                        <h1>{title}</h1>
                        <p>Category: {category}</p>
                        <p>Tags: {tags.join(', ')}</p>
                        <hr />
                    </div>
                    <slot />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>